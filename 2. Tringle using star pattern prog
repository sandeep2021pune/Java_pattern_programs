// WAP to print  the triangle using star pattern programming logic.

public class tringle {

    public static void main(String[] args) {
        {
            int n=10;
            for(int i=0;i<n;i++)
            {
                for(int j=0;j<n;j++)
                {
                    if( i==n-1 || j==0 || i==j)
                    {
                        System.out.print("* ");
                    }
                    else
                    {
                        System.out.print("  ");
                    }
                }
                System.out.print(" ");
                for(int j=0;j<n;j++)
                {
                    if( i==n-1 || j==n-1|| i+j==n-1)
                    {
                        System.out.print("* ");
                    }
                    else
                    {
                        System.out.print("  ");
                    }
                }
                System.out.println(" ");
            }
        }
    }
}

